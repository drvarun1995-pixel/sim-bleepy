# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Database URL for migrations
DATABASE_URL=postgresql://postgres:password@localhost:54322/postgres

# Authentication
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret

# Email Configuration (Resend)
RESEND_API_KEY=your_resend_api_key
FROM_EMAIL=noreply@yourdomain.com

# AI Service Pricing (GBP)
# OpenAI pricing per 1M tokens
OPENAI_PRICE_PER_1M_TOKENS_INPUT=2.50
OPENAI_PRICE_PER_1M_TOKENS_OUTPUT=10.00
OPENAI_PRICE_PER_1K_TOKENS_EMBEDDINGS=0.0001

# Hume pricing per minute and per token
HUME_PRICE_PER_MIN=0.15
HUME_PRICE_PER_TOKEN=0.001

# API Keys for usage tracking
HUME_API_KEY=your_hume_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Hume EVI Configuration IDs
NEXT_PUBLIC_HUME_CONFIG_CHEST_PAIN=your_chest_pain_config_id
NEXT_PUBLIC_HUME_CONFIG_POSTURAL_HYPOTENSION_FALL=your_falls_config_id
NEXT_PUBLIC_HUME_CONFIG_SHORTNESS_BREATH=your_shortness_breath_config_id
NEXT_PUBLIC_HUME_CONFIG_JOINT_PAIN_ASSESSMENT=your_joint_pain_assessment_config_id

# Other AI providers
ANTHROPIC_PRICE_PER_1M_TOKENS_INPUT=8.00
ANTHROPIC_PRICE_PER_1M_TOKENS_OUTPUT=24.00

# Application Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Analytics Configuration
ANALYTICS_RETENTION_DAYS=730
PURGE_OLD_TRANSCRIPTS_DAYS=365

# Feature Flags
ENABLE_AB_TESTING=true
ENABLE_COST_TRACKING=true
ENABLE_TECH_METRICS=true

# Timezone
TZ=Europe/London

# Stripe Configuration (for billing)
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_SESSIONS_PER_HOUR=10
